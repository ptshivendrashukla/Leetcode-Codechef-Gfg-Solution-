#define T(x) int x; cin >> x; while(x--)
#define ob(x) __builtin_popcountll(x)
#define zb(x) __builtin_ctzll(x)

void solve(){
    int N, K;
    cin >> N >> K;
    
    if(K == 0){
        cout << N << "\n";
        return;
    }
    
    cout << (N - (K * (N / K))) << "\n";
}

